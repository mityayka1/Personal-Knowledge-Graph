# PKG Core Environment Variables
# Centralized Remote Database - same for all environments

# App
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1
API_KEY=your-api-key-here

# Database (PostgreSQL + pgvector)
# Remote centralized database - get credentials from admin
DB_HOST=your-db-host.example.com
DB_PORT=5432
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password
DB_DATABASE=pkg
DB_SSL=true  # Enable for remote connections over public internet

# Redis (BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_PREFIX=pkg:bull

# OpenAI (Embeddings)
OPENAI_API_KEY=your-openai-api-key

# Worker (n8n)
WORKER_WEBHOOK_URL=http://n8n:5678/webhook

# File Storage
FILE_STORAGE_PATH=/data/files

# Session Settings
SESSION_GAP_HOURS=4

# Context Settings
DEFAULT_CONTEXT_MAX_TOKENS=2000
DEFAULT_CONTEXT_RECENT_DAYS=30

# Entity Resolution
AUTO_RESOLVE_CONFIDENCE_THRESHOLD=0.9
