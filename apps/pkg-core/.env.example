# PKG Core Environment Variables
# Centralized Remote Database - same for all environments

# App
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1
API_KEY=your-api-key-here

# Database (PostgreSQL + pgvector)
# Remote centralized database - same for dev/staging/production
DB_HOST=service.googlesheets.ru
DB_PORT=5432
DB_USERNAME=ccmcp
DB_PASSWORD=your-db-password
DB_DATABASE=pkg

# Redis (BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# OpenAI (Embeddings)
OPENAI_API_KEY=your-openai-api-key

# Worker (n8n)
WORKER_WEBHOOK_URL=http://n8n:5678/webhook

# File Storage
FILE_STORAGE_PATH=/data/files

# Session Settings
SESSION_GAP_HOURS=4

# Context Settings
DEFAULT_CONTEXT_MAX_TOKENS=2000
DEFAULT_CONTEXT_RECENT_DAYS=30

# Entity Resolution
AUTO_RESOLVE_CONFIDENCE_THRESHOLD=0.9
