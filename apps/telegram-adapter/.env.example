# Telegram API credentials (get from https://my.telegram.org)
TELEGRAM_API_ID=
TELEGRAM_API_HASH=

# Session string (generated after first authentication)
TELEGRAM_SESSION_STRING=

# Phone number for authentication
TELEGRAM_PHONE_NUMBER=

# Connection settings
TELEGRAM_CONNECTION_RETRIES=5

# Session gap threshold in hours
SESSION_GAP_THRESHOLD=4

# Telegram Bot (Second Brain commands)
TELEGRAM_BOT_TOKEN=
# Comma-separated list of Telegram user IDs allowed to use the bot
# Get your ID from @userinfobot in Telegram
TELEGRAM_BOT_ALLOWED_USERS=

# PKG Core API
PKG_CORE_URL=http://localhost:3000/api/v1
PKG_CORE_API_KEY=your-api-key-here
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Redis for daily context cache
# Use redis://redis:6379 in Docker, redis://localhost:6379 locally
REDIS_URL=redis://localhost:6379
# TTL for daily context cache in seconds (default: 24 hours)
DAILY_CONTEXT_TTL=86400

# Server port
PORT=3001
