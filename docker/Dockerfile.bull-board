FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY apps/bull-board/package.json ./

# Install dependencies
RUN npm install --production

# Copy source
COPY apps/bull-board/server.js ./

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001
USER nodejs

EXPOSE 3002

CMD ["node", "server.js"]
